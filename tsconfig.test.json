{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.test.tsbuildinfo"
  },
  "include": [
    "packages/**/*.test.ts",
    "packages/**/*.spec.ts",
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.tsx"
  ],
  "exclude": ["**/node_modules/*", "**/dist", "**/build"]
}
