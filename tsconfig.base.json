{
  "compilerOptions": {
    "allowJs": false,
    "target": "ESNEXT",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "checkJs": false,
    "incremental": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals"],
    "paths": {
      "@brain-toolkit/antd-blocks": ["./packages/antd-blocks/src"],
      "@brain-toolkit/antd-blocks/*": ["./packages/antd-blocks/src/*"],
      "@brain-toolkit/react-kit": ["./packages/react-kit/src"],
      "@brain-toolkit/react-kit/*": ["./packages/react-kit/src/*"],
      "@brain-toolkit/antd-theme-override": [
        "./packages/antd-theme-override/src"
      ],
      "@brain-toolkit/antd-theme-override/*": [
        "./packages/antd-theme-override/src/*"
      ],
      "@brain-toolkit/bridge": ["./packages/bridge/src"],
      "@brain-toolkit/bridge/*": ["./packages/bridge/src/*"],
      "@brain-toolkit/element-sizer": ["./packages/element-sizer/src"],
      "@brain-toolkit/element-sizer/*": ["./packages/element-sizer/src/*"],
      "@brain-toolkit/ts2locales": ["./packages/ts2locales/src"],
      "@brain-toolkit/ts2locales/*": ["./packages/ts2locales/src/*"],
      "@brain-toolkit/brain-user": ["./packages/brain-user/src"],
      "@brain-toolkit/brain-user/*": ["./packages/brain-user/src/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  }
}
