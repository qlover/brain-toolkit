{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "./ts-build",
    "allowJs": false,
    "jsx": "react-jsx",
    "esModuleInterop": false,
    "tsBuildInfoFile": "./ts-build/.tsbuildinfo",
    "types": ["vite/client", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@brain-toolkit/react-kit": ["./src"],
      "@brain-toolkit/react-kit/*": ["./src/*"]
    }
  },
  "include": ["src", "package.json", "example/src"],
  "exclude": ["dist", "node_modules", "ts-build", "__tests__", "__mocks__"],
  "references": []
}
