{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@brain-toolkit/antd-blocks": ["../src/index.ts"],
      "@brain-toolkit/antd-blocks/resourceTable": [
        "../src/resourceTable/index.ts"
      ],
      "@brain-toolkit/antd-blocks/resourceTable/*": ["../src/resourceTable/*"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
